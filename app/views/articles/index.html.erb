<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title es</th>
      <th>Title en</th>
      <th>Body es</th>
      <th>Body en</th>
      <th>Slug es</th>
      <th>Slug en</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title_es %></td>
        <td><%= article.title_en %></td>
        <td><%= article.body_es %></td>
        <td><%= article.body_en %></td>
        <td><%= article.slug_es %></td>
        <td><%= article.slug_en %></td>
        <td><%= link_to 'Show', article %></td>
        <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

